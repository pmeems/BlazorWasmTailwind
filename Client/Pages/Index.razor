@page "/"
@inject NavigationManager _navigationManager

<HeaderComponent Title="@PageTitle" MetaTags="@MetaTags"></HeaderComponent>

<h1><img src="img/icon-192.png" alt="" class="mr-5 inline-block" height="96"> Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

@code {
    private protected string PageTitle = "Home page";
    private protected Dictionary<string, string> MetaTags = new() { { "description", "Blazor WASM index page." } };

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(0);
        MetaTags.Add("og:image", _navigationManager.BaseUri + "img/icon-192.png");
    }
}